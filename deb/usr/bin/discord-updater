#!/bin/bash
if [ "$EUID" -ne 0 ]
then
	echo "Le programme doit être lancé en tant que root"
	exit
fi

update()
{
	cd /tmp/
	rm discord.deb > /dev/null 2>&1
	wget https://discord.com/api/download?platform=linux&format=deb /tmp/discord.deb
	apt install /tmp/discord.deb -y
	rm discord.deb > /dev/null 2>&1
}

if [ $1 = "--gui" ]
then
	update
	zenity --info
else
	update
fi
